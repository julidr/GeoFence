<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dm.usa.edu.co.geofence.MainActivity"
    android:background="#0a0a0a">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bievenido a GeoFence"
        android:id="@+id/textTitulo"
        android:textColor="#0089ff"
        android:layout_alignParentTop="true"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:background="#1c1c1c"
        android:padding="10dp"
        android:textAlignment="center"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextRadio"
        android:padding="15dp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:layout_below="@+id/textTitulo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Establecer Radio"
        android:id="@+id/buttonRadio"
        android:layout_below="@+id/editTextRadio"
        android:layout_centerHorizontal="true"
        android:background="#1c1c1c"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp"
        android:textSize="17dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detectar Posición"
        android:id="@+id/buttonDetectar"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/buttonRadio"
        android:layout_centerHorizontal="true"
        android:background="#1c1c1c"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:textColor="#FFFFFF"
        android:textSize="17dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/textFijo"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:layout_below="@+id/buttonCheck"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/textUbicacion"
        android:layout_alignTop="@+id/textFijo"
        android:layout_alignEnd="@+id/editTextRadio"
        android:textColor="#FFFFFF"
        android:layout_marginRight="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/textPosiGuardada"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/textFijo"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/textPosAc"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/textGuardada"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/textGuardada"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/textPosiGuardada" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/textActual"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/textPosAc"
        android:layout_alignEnd="@+id/textPosAc" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Revisar Posición"
        android:id="@+id/buttonCheck"
        android:layout_below="@+id/buttonDetectar"
        android:layout_centerHorizontal="true"
        android:background="#1c1c1c"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:textColor="#FFFFFF"
        android:textSize="17dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/textViewDentroFuera"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:padding="5dp"/>
</RelativeLayout>
